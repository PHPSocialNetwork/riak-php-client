{
  "name": "basho/riak",
  "description": "Official Riak client for PHP",
  "keywords": [
    "basho",
    "riak",
    "client",
    "driver",
    "database",
    "nosql",
    "kv",
    "datatype",
    "crdt",
    "data"
  ],
  "homepage": "http://basho.com/riak/",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Riak Team & Contributors",
      "homepage": "https://github.com/basho/riak-php-client/contributors"
    }
  ],
  "autoload": {
    "psr-4": {"Basho\\": "src/"}
  },
  "autoload-dev": {
    "psr-4": {"Basho\\Tests\\": "tests/"}
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "basho/tools",
        "version": "1.0.0",
        "dist": {
          "url": "https://github.com/basho/riak-client-tools/archive/master.zip",
          "type": "zip"
        }
      }
    }
  ],
  "require": {
    "php": ">=5.4",
    "ext-json": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "4.5.*",
    "phpdocumentor/phpdocumentor": "2.*",
    "basho/tools": "1.0.0"
  }
}